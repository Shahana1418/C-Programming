#include<stdio.h>
int main()
{
    float principal,rate,time,SimpleInterest;
    printf("enter the principal amount:");
    scanf("%f",&principal);
    printf("enter the rate:");
    scanf("%f",&rate);
    printf("enter the time:");
    scanf("%f",&time);
    SimpleInterest=(principal*rate*time)/100;
    printf("simple interest is :%.2f\n",SimpleInterest);
    return 0;
}