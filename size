#include<stdio.h>
int main()
{
    printf("size of the int datatype is %lu",sizeof(int));
    printf("size of the int datatype is %lu",sizeof(short int));
    printf("size of the int datatype is %lu",sizeof(float));
    printf("size of the int datatype is %lu",sizeof(double));
    printf("size of the int datatype is %lu",sizeof(char));
}